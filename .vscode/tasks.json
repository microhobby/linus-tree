{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make-config",
            "command": "make",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "-C",
                "${workspaceFolder}",
                "wsl2_defconfig"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "icon": {
                "id": "flame",
                "color": "terminal.ansiYellow"
            },
            "dependsOrder": "sequence"
        },
        {
            "label": "make-image",
            "command": "make",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "-C",
                "${workspaceFolder}",
                "-j8"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "icon": {
                "id": "flame",
                "color": "terminal.ansiYellow"
            },
            "dependsOrder": "sequence"
        },
        {
            "label": "build-wsl-kernel-mainline",
            "command": "echo",
            "type": "shell",
            "args": [
                "OK"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "icon": {
                "id": "flame",
                "color": "terminal.ansiYellow"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "make-config",
                "make-image"
            ]
        },
    ]
}
